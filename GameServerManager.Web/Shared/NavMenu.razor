<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Game Server Manager</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="servers">
                <span class="bi bi-hdd-stack nav-icon" aria-hidden="true"></span> Servers
            </NavLink>
        </div>
        <div class="nav-item px-3 ps-0 ms-3">
            <NavLink class="nav-link m-0 p-0" href="server/arma">
                <img src="/assets/arma3.png" style="width: 50px; height: 35px; "/> Servers
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="console">
                <span class="bi bi-code-square nav-icon" aria-hidden="true"></span> Console
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="settings">
                <span class="bi bi-gear-fill nav-icon" aria-hidden="true"></span> Settings
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
